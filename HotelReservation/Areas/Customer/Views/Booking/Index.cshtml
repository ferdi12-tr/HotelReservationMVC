@model BookModelView
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Customer/Views/_Layout.cshtml";
	Random rnd = new Random();
}


<!-- Sub banner start -->
<div class="sub-banner">
	<div class="container">
		<div class="breadcrumb-area">
			<h1>Booking System</h1>
		</div>
		<nav class="breadcrumbs">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="index.html">Home</a></li>
				<li class="breadcrumb-item active">Booking System</li>
			</ol>
		</nav>
	</div>
</div>
<!-- Sub Banner end -->
<!-- Booking flow start -->
<div class="booking-flow content-area-6">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="stepwizard">
					<div class="stepwizard-row setup-panel">
						<div class="stepwizard-step col-xs-3">
							<a href="#step-1" class="btn btn-success btn-circle">
								<i class="fa fa-folder-o"></i>
							</a>
							<h3>Selected Room</h3>
						</div>
						<div class="stepwizard-step col-xs-3">
							<a href="#step-2" class="btn btn-default btn-circle">
								<i class="fa fa-user"></i>
							</a>
							<h3>Personal Info</h3>
						</div>
						<div class="stepwizard-step col-xs-3">
							<a href="#step-3" class="btn btn-default btn-circle">
								<i class="fa fa-cc"></i>
							</a>
							<h3>Payment Info</h3>
						</div>
						<div class="stepwizard-step col-xs-3">
							<a href="#step-4" class="btn btn-default btn-circle">
								<i class="fa fa-check"></i>
							</a>
							<h3>Review</h3>
						</div>
					</div>
				</div>
				<div class="clearfix"></div>

				<form method="post" asp-action="ConfirmBooking" asp-area="Customer" asp-controller="Booking">


					@* @await Html.PartialAsync("SelectedRoom", Model.Room) *@
					@* selected room region *@
					<div class="panel panel-primary setup-content" id="step-1">
						<div class="panel-body">
							<div class="row">
								<div class="hotel-box">
									<!-- Photo thumbnail -->
									<div class="photo-thumbnail">
										<div class="photo">
											<img src="~/@Model.Room?.ImgUrl1" alt="photo" class="img-fluid w-100">
											<a href="@Url.Action("RoomDetails", "Room", new {Area="Customer", roomId=1})">
												<span class="blog-one__plus"></span>
											</a>
										</div>
										<div class="pr">
											<div class="rating">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star-half-full"></i>
											</div>
											$@Model.Room?.PricePerHour /Hour
										</div>
									</div>
									<!-- Detail -->
									<div class="detail clearfix">
										<h3>
											<a href="@Url.Action("RoomDetails", "Room", new {Area="Customer", roomId=Model.Room?.Id})">
												@Model.Room?.RoomName
											</a>
										</h3>
										<p class="location">

											<i class="fa fa-map-marker"></i> @Model.Room?.Address

										</p>
										<div class="fecilities">
											<ul>

												<li>
													<i class="flaticon-bed"></i> Beds
												</li>

												@if (Model.Room.HasAirConditioning)
												{
													<li>
														<i class="flaticon-air-conditioning"></i>
														AC
													</li>
												}

												@if (Model.Room.HasTv)
												{
													<li>
														<i class="flaticon-graph-line-screen"></i>
														TV
													</li>
												}

												@if (Model.Room.HasGym)
												{
													<li>
														<i class="flaticon-weightlifting"></i>
														GYM
													</li>
												}

												@if (Model.Room.HasFreeWifi)
												{
													<li>
														<i class="flaticon-wifi-connection-signal-symbol"></i>
														Wi-fi
													</li>
												}

												@if (Model.Room.HasParking)
												{
													<li>
														<i class="flaticon-parking"></i>
														Parking
													</li>
												}

											</ul>
										</div>
									</div>
								</div>
							</div>
							<button class="btn-md btn-theme btn-4 btn-7 nextBtn pull-right" type="button">Save and continue</button>
						</div>
					</div>


					@* @await Html.PartialAsync("PersonalInfo", Model) *@
					@* personal info region *@
					<div class="panel panel-primary setup-content" id="step-2">
						<div class="panel-body">
							<div class="row">
								<div class="col-lg-8 col-md-12 col-sm-12">
									<h3 class="booking-heading-2 black-color">Personal Info</h3>
									<div class="contact-form">
										<div class="sidebar-widget">
											<div class="row">
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group firstname">
														<label for="inputfirstname" class="form-label">First Name</label>
														<input asp-for="FirstName" type="text" class="form-control" id="inputfirstname" placeholder="First Name">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group lastname">
														<label for="inputlastname" class="form-label">Last Name</label>
														<input asp-for="LastName" type="text" class="form-control" id="inputlastname" placeholder="Last Name">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-1">
														<label for="inputaddress-line1" class="form-label">Address Line 1</label>
														<input asp-for="AddressLine1" type="text" class="form-control" id="inputaddress-line1" placeholder="Address Line 1">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputaddress-line2" class="form-label">Address Line 2</label>
														<input asp-for="AddressLine2" type="text" class="form-control" id="inputaddress-line2" placeholder="Address Line 2">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputcity" class="form-label">City</label>
														<input asp-for="City" type="text" class="form-control" id="inputcity" placeholder="City">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputcode" class="form-label">Zip/Post Code</label>
														<input asp-for="ZipCode" type="text" class="form-control" id="inputcode" placeholder="Zip">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group country">
														<label>Country</label>
														<select class="selectpicker country search-fields" asp-for="Country">
															<option value="">County</option>
															<option value="Türkiye">Türkiye</option>
															<option value="Germany">Germany</option>
														</select>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputstate" class="form-label">State/Region</label>
														<input asp-for="State" type="text" class="form-control" id="inputstate" placeholder="State">
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-lg-4 col-md-12 col-sm-12">
									<h3 class="booking-heading-2">Booking Details</h3>
									<div class="booling-details-box">
										<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
											<div class="carousel-indicators">
												<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
												<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
												<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
											</div>
											<div class="carousel-inner">
												<div class="carousel-item active">
													<img src="~/@Model.Room?.ImgUrl1" class="d-block w-100" alt="photo">
												</div>
												<div class="carousel-item">
													<img src="~/@Model.Room?.ImgUrl2" class="d-block w-100" alt="photo">
												</div>
												<div class="carousel-item">
													<img src="~/@Model.Room?.ImgUrl3" class="d-block w-100" alt="photo">
												</div>
											</div>
										</div>
										<div class="info">
											<h4><a href="#">@Model.Room?.RoomName</a></h4>
											<ul>
												<li>
													<span>Check In:</span> @Model.CheckInDate
												</li>
												<li>
													<span>Check Out:</span> @Model.CheckOutDate
												</li>
												<li>
													<span>Rooms:</span> 3
												</li>
												<li>
													<span>Adults:</span> 2
												</li>
												<li>
													<span>Child:</span> 1
												</li>
											</ul>
											<div class="price">
												Total:$317.99
											</div>
										</div>
									</div>
								</div>
							</div>
							<button class="btn-md btn-theme btn-4 btn-7 nextBtn pull-left" type="button">Save and continue</button>
						</div>
					</div>


					@* @await Html.PartialAsync("PaymentInfo", Model) *@
					@* payment info region *@
					<div class="panel panel-primary setup-content" id="step-3">
						<div class="panel-body">
							<div class="row">
								<div class="col-lg-8 col-md-12 col-xs-12">
									<h3 class="booking-heading-2 black-color">Billing Address</h3>
									<div class="contact-form">
										<div class="sidebar-widget">
											<div class="row">
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group firstname">
														<label for="inputfirstname2" class="form-label">First Name</label>
														<input asp-for="BillingFirstName" type="text" class="form-control" id="inputfirstname2" placeholder="First Name">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group lastname">
														<label for="inputlastname2" class="form-label">Last Name</label>
														<input asp-for="BillingLastName" type="text" class="form-control" id="inputlastname2" placeholder="Last Name">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-1">
														<label for="inputaddress-line3" class="form-label">Address Line 1</label>
														<input asp-for="BillingAddressLine1" type="text" class="form-control" id="inputaddress-line3" placeholder="Address Line 1">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputaddress-line4" class="form-label">Address Line 2</label>
														<input asp-for="BillingAddressLine2" type="text" class="form-control" id="inputaddress-line4" placeholder="Address Line 2">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputcity2" class="form-label">City</label>
														<input asp-for="BillingCity" type="text" class="form-control" id="inputcity2" placeholder="City">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputcode2" class="form-label">Zip/Post Code</label>
														<input asp-for="BillingZipCode" type="text" class="form-control" id="inputcode2" placeholder="Zip">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group address-line-2">
														<label for="inputstate2" class="form-label">State/Region</label>
														<input asp-for="BillingState" type="text" class="form-control" id="inputstate2" placeholder="State">
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
													<div class="form-group country">
														<label>Country</label>
														<select class="selectpicker country search-fields" asp-for="BillingCountry">
															<option value="">County</option>
															<option value="Türkiye">Türkiye</option>
															<option value="Germany">Germany</option>
														</select>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-lg-4 col-md-12 col-xs-12">
									<h3 class="booking-heading-2">Booking Details</h3>
									<div class="booling-details-box">
										<div id="carouselExampleIndicators2" class="carousel slide" data-bs-ride="carousel">
											<div class="carousel-indicators">
												<button type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
												<button type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide-to="1" aria-label="Slide 2"></button>
												<button type="button" data-bs-target="#carouselExampleIndicators2" data-bs-slide-to="2" aria-label="Slide 3"></button>
											</div>
											<div class="carousel-inner">
												<div class="carousel-item active">
													<img src="~/@Model.Room?.ImgUrl1" class="d-block w-100" alt="photo">
												</div>
												<div class="carousel-item">
													<img src="~/@Model.Room?.ImgUrl2" class="d-block w-100" alt="photo">
												</div>
												<div class="carousel-item">
													<img src="~/@Model.Room?.ImgUrl3" class="d-block w-100" alt="photo">
												</div>
											</div>
										</div>
										<div class="info">
											<h4><a href="#">Double Room</a></h4>
											<ul>
												<li>
													<span>Check In:</span> @Model.CheckInDate
												</li>
												<li>
													<span>Check Out:</span> @Model.CheckOutDate
												</li>
												<li>
													<span>Rooms:</span> 3
												</li>
												<li>
													<span>Adults:</span> 2
												</li>
												<li>
													<span>Child:</span> 1
												</li>
											</ul>
											<div class="your-address">
												<strong>Your Address:</strong>
												<address>
													<strong>John maikel</strong>
													<br><br>
													@(Model.AddressLine1 + " " + Model.AddressLine2 + "\n" + Model.City )
												</address>
											</div>
											<div class="price">
												Total:$317.99
											</div>
										</div>
									</div>
								</div>
							</div>
							<button class="btn-md btn-theme btn-4 btn-7 nextBtn pull-left" type="button">Save and continue</button>
						</div>
					</div>

					@* @await Html.PartialAsync("ReviewBook", Model) *@
					@* review book region *@
					<div class="panel panel-primary setup-content" id="step-4">
						<div class="panel-body">
							<h3 class="booking-heading-2">Booking Details</h3>
							<div class="row g-0 booling-details-box booling-details-box-2 mb-30">
								<div class="col-xl-7 col-lg-7 col-md-12">
									<div id="carouselExampleCaptions2" class="carousel slide" data-bs-ride="carousel">
										<div class="carousel-indicators">
											<button type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
											<button type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide-to="1" aria-label="Slide 2"></button>
											<button type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide-to="2" aria-label="Slide 3"></button>
										</div>
										<div class="carousel-inner">
											<div class="carousel-item active">
												<img src="~/@Model.Room?.ImgUrl1" alt="photo" class="d-block w-100">
												<div class="carousel-caption"></div>
											</div>
											<div class="carousel-item">
												<img src="~/@Model.Room?.ImgUrl2" alt="photo" class="d-block w-100">
												<div class="carousel-caption"></div>
											</div>
											<div class="carousel-item">
												<img src="~/@Model.Room?.ImgUrl3" alt="photo" class="d-block w-100">
												<div class="carousel-caption"></div>
											</div>
										</div>
									</div>
								</div>
								@{
									var paymentId = rnd.Next(1000, 10000);
								}
								<div class="col-xl-5 col-lg-5 col-md-12">
									<div class="info">
										<h4>Your Payment ID: #@paymentId</h4>
										<ul>
											<li>
												<span>Check In:</span> @Model.CheckInDate
											</li>
											<li>
												<span>Check Out:</span> @Model.CheckOutDate
											</li>
											<li>
												<span>Adults:</span> 2
											</li>
											<li>
												<span>Child:</span> 1
											</li>
										</ul>
										<div class="your-address">
											<strong>Your Address:</strong>
											<address>
												<strong>@Model.FirstName @Model.LastName</strong>
												<br>
												@Model.AddressLine1  @Model.AddressLine2 @Model.City
											</address>
										</div>
										<div class="price">
											Total:$317.99
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12">
								<div class="info-2">
									@Model.Room.Description
								</div>
							</div>
							<input asp-for="SelectedRoomId" value="@Model.SelectedRoomId" type="hidden" />
							<input asp-for="CheckInDate" value="@Model.CheckInDate" type="hidden" />
							<input asp-for="CheckOutDate" value="@Model.CheckOutDate" type="hidden" />
							<input asp-for="PaymentId" value=@paymentId.ToString() type="hidden" />
							<button class="btn-md btn-theme btn-4 btn-7 nextBtn pull-right" type="submit">confirm booking</button>
						</div>
					</div>


				</form>

			</div>
		</div>
	</div>
</div>