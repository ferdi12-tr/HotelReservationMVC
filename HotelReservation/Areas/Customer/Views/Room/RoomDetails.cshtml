@model BookModelView 
@{
    ViewData["Title"] = "RoomDetails";
    Layout = "~/Areas/Customer/Views/_Layout.cshtml";
}


<!-- Rooms banner start -->
<div class="rooms-banner">
    <div class="container-fluid">
        <div class="featured-slider row slide-box-btn slider" data-slick='{"slidesToShow": 3, "responsive":[{"breakpoint": 1024,"settings":{"slidesToShow": 2}}, {"breakpoint": 768,"settings":{"slidesToShow": 1}}]}'>
            <div class="slide slide-box">
                <div class="banner-img">
                    <img src="~/@Model.Room?.ImgUrl1" alt="banner" class="img-fluid bp">
                </div>
            </div>
            <div class="slide slide-box">
                <div class="banner-img">
                    <img src="~/@Model.Room?.ImgUrl2" alt="banner" class="img-fluid bp">
                </div>
            </div>
            <div class="slide slide-box">
                <div class="banner-img">
                    <img src="~/@Model.Room?.ImgUrl3" alt="banner" class="img-fluid bp">
                </div>
            </div>
            <div class="slide slide-box">
                <div class="banner-img">
                    <img src="~/@Model.Room?.ImgUrl4" alt="banner" class="img-fluid bp">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Rooms banner end -->


<!-- room info heading start -->
<div class="room-info-heading">
    <div class="container">
        <div class="room-info-heading-inner">
            <div class="row g-0">
                <div class="col-xl-3 col-lg-4 col-md-4">
                    <div class="photo">
                        <div class="home">
                            <img class="img-fluid" src="~/@Model.Room?.ImgUrl1" alt="image">
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8 col-md-8 align-self-center">
                    <div class="content">
                        <div class="for-sale">For Sale</div>
                        <h2><a href="#">@Model.Room?.RoomName</a> <span class="pull-right">$@Model.Room?.PricePerHour<small>/Ho</small></span></h2>
                        <ul class="facilities-list clearfix">

                            <li>
                                <i class="flaticon-bed"></i> Beds
                            </li>

                            @if (Model.Room.HasAirConditioning)
                            {
                                <li>
                                    <i class="flaticon-air-conditioning"></i>
                                    AC
                                </li>
                            }

                            @if (Model.Room.HasTv)
                            {
                                <li>
                                    <i class="flaticon-graph-line-screen"></i>
                                    TV
                                </li>
                            }

                            @if (Model.Room.HasGym)
                            {
                                <li>
                                    <i class="flaticon-weightlifting"></i>
                                    GYM
                                </li>
                            }

                            @if (Model.Room.HasFreeWifi)
                            {
                                <li>
                                    <i class="flaticon-wifi-connection-signal-symbol"></i>
                                    Wi-fi
                                </li>
                            }

                            @if (Model.Room.HasParking)
                            {
                                <li>
                                    <i class="flaticon-parking"></i>
                                    Parking
                                </li>
                            }
                        </ul>

                        <p><i class="fa fa-map-marker"></i> @Model.Room?.Address</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- room info heading end -->


<!-- Rooms details page start -->
<div class="content-area-17 rooms-details-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <!-- Rooms details section start -->
                <div class="rooms-detail-slider ">
                    <!-- Rooms description start -->
                    <div class="rooms-description mb-50">
                        <!-- Title -->
                        <h3>Rooms Description</h3>
                        <!-- paragraph -->
                        <p class="mb-0">@Model.Room?.Description</p>
                    </div>
                    <!-- Rooms description end -->
                    <!-- House reles start -->
                    <div class="house-rules mb-50">
                        <h3>House Rules</h3>
                        <ul>
                            <li><i class="fa fa-hand-o-right"></i> Check-in: 10:00 AM - 7:00 PM</li>
                            <li><i class="fa fa-hand-o-right"></i> Checkout: 11:00 AM</li>
                            <li><i class="fa fa-hand-o-right"></i> No smoking</li>
                            <li><i class="fa fa-hand-o-right"></i> No pets</li>
                            <li><i class="fa fa-hand-o-right"></i> No parties or events</li>
                            <li><i class="fa fa-hand-o-right"></i> Lorem ipsum dolor sit amet, conser adipiscing elit. Donec luctus</li>
                        </ul>
                    </div>
                    <!-- House reles end -->
                    <!-- Pricing plans start -->
                    <div class="pricing-table mb-50">
                        <h3>Pricing Plans</h3>
                        <table class="table-responsive pricing-wrap">
                            <thead>
                                <tr>
                                    <th>Mon</th>
