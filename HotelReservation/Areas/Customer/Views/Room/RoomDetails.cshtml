                            </thead>
                            <tbody>
                                <tr>
                                    <td>$@Model.Room?.PricePerHour</td>
                                    <td>$@Model.Room?.PricePerHour</td>
                                    <td>$@Model.Room?.PricePerHour</td>
                                    <td>$@Model.Room?.PricePerHour</td>
                                    <td>$@Model.Room?.PricePerHour</td>
                                    <td>$@Model.Room?.PricePerHour</td>
                                    <td>$@Model.Room?.PricePerHour</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- Pricing plans end -->
                    <!-- Cancellation start  -->
                    <div class="cancellation mb-50">
                        <h3>Cancellation</h3>
                        <p>
