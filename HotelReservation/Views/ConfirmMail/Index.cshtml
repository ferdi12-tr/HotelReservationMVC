@model ConfirmMailViewModel
@{
	Layout = null;
}

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
	<div class="container">
		<br />
		<br />
		<form method="post">
			<label>Enter Confirmation Code For @Model.RegisteredEmail Here: </label>
			<input asp-for="ConfirmCode" type="text" class="form-control" required/>
			<input asp-for="RegisteredEmail" type="hidden" class="form-control"/>
			<br />
			<button class="btn btn-primary form-control">Confirm Email</button>
		</form>
	</div>
</body>